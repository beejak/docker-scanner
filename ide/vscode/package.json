{
  "name": "docker-scanner",
  "displayName": "Docker Scanner",
  "description": "Scan container images for vulnerabilities from the editor. Uses the docker-scanner CLI or MCP server.",
  "version": "0.1.0",
  "publisher": "docker-scanner",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other", "Testing"],
  "activationEvents": ["onCommand:docker-scanner.scanImage", "onCommand:docker-scanner.scanImageFromDockerfile"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docker-scanner.scanImage",
        "title": "Docker Scanner: Scan image"
      },
      {
        "command": "docker-scanner.scanImageFromDockerfile",
        "title": "Docker Scanner: Scan image for current Dockerfile"
      }
    ],
    "menus": {
      "editor/context": [
        { "command": "docker-scanner.scanImageFromDockerfile", "when": "editorLangId == dockerfile" }
      ],
      "commandPalette": [
        { "command": "docker-scanner.scanImage" },
        { "command": "docker-scanner.scanImageFromDockerfile" }
      ]
    },
    "configuration": {
      "title": "Docker Scanner",
      "properties": {
        "dockerScanner.cliPath": {
          "type": "string",
          "default": "scanner",
          "description": "Path to scanner CLI (e.g. 'scanner' or full path). Use 'go run ./cmd/cli' to run from repo."
        },
        "dockerScanner.reportsDir": {
          "type": "string",
          "default": "./reports",
          "description": "Default output directory for reports."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/eslint-plugin": "^0.9.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  }
}
